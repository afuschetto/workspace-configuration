{
    "files.associations": {
        "*.idl": "yaml"
    },
    "files.exclude": {
        "bazel.*/": true,
        "buildfarm/": true,
        "buildscripts/": true,
        "debian/": true,
        "distsrc/": true,
        "etc/": true,
        "evergreen/": true,
        "rpm/": true,
        "site_scons/": true,
        "src/third_party/": true,
        "build.ninja": true,
        "compile_commands.json": true,
        "copybara.*": true,
        "jsconfig.json": true,
        "package.json": true,
        "pnpm-lock.yaml": true,
        "poetry.lock": true,
        "pyproject.toml": true,
        "tools/": true
    },
    "files.watcherExclude": {
        "bazel.*/": true,
        "buildfarm/": true,
        "buildscripts/": true,
        "debian/": true,
        "distsrc/": true,
        "etc/": true,
        "evergreen/": true,
        "rpm/": true,
        "site_scons/": true,
        "src/third_party/": true,
        "build.ninja": true,
        "compile_commands.json": true,
        "copybara.*": true,
        "jsconfig.json": true,
        "package.json": true,
        "pnpm-lock.yaml": true,
        "poetry.lock": true,
        "pyproject.toml": true,
        "tools/": true
    },
    "files.trimTrailingWhitespace": true,
    "search.exclude": {
        "bazel.*/": true,
        "buildfarm/": true,
        "buildscripts/": true,
        "debian/": true,
        "distsrc/": true,
        "etc/": true,
        "evergreen/": true,
        "rpm/": true,
        "site_scons/": true,
        "src/third_party/": true,
        "build.ninja": true,
        "compile_commands.json": true,
        "copybara.*": true,
        "jsconfig.json": true,
        "package.json": true,
        "pnpm-lock.yaml": true,
        "poetry.lock": true,
        "pyproject.toml": true,
        "tools/": true
    },
    "editor.rulers": [
        100
    ],
    ////////////////////
    // cpptools
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.formatting": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.intelliSenseEngine": "disabled",
    ////////////////////
    // clang-format
    "[c][cpp][javascript]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true
    },
    ////////////////////
    // eslint
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "eslint.validate": [
        "javascript"
    ],
    ////////////////////
    // code-spell-checker
    "cSpell.words": [
        "BSON",
        "BSONOBJ",
        "cohosted",
        "Configsvr",
        "dassert",
        "defragmentation",
        "defragmentations",
        "defragmenting",
        "DLEVEL",
        "fassert",
        "FCVP",
        "interruptible",
        "invokable",
        "itcount",
        "jstests",
        "Killable",
        "logd",
        "LOGV",
        "multiversion",
        "Noops",
        "Oplog",
        "optimes",
        "retryable",
        "sharded",
        "shardsvr",
        "stmts",
        "tassert",
        "tojsononeline",
        "Txns",
        "uassert",
        "uasserted",
        "Undroppable",
        "Unreplicated",
        "UNSHARDED",
        "upserted",
        "wuow"
    ]
}
