{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Prepare repository",
            "type": "shell",
            "command": "mongo-prepare",
            "group": "build"
        },
        {
            "label": "Build all",
            "type": "shell",
            "command": "mongo-build",
            "args": [
                "--gcc",
                "--debug",
                "--dynamic"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
