{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run unit-test",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/install/bin/${input:unittestExecutable}",
            "args": [
                "--suite=${input:unittestSuite}"
            ],
            "stopAtEntry": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable GDB pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Open core dump",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceFolder}/build/install/bin/${input:executable}",
            "coreDumpPath": "${workspaceFolder}/${input:coreDumpFile}",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable GDB pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Attach to process",
            "type": "cppdbg",
            "request":"attach",
            "program": "${workspaceFolder}/build/install/bin/${input:serverExecutable}",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable GDB pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "executable",
            "description": "Executable",
            "options": [
                "mongod",
                "mongos",
                "db_s_config_server_test",
                "db_s_shard_server_test"
            ],
            "default": "mongod"
        },
        {
            "type": "pickString",
            "id": "serverExecutable",
            "description": "Unit-test executable",
            "options": [
                "mongod",
                "mongos"
            ],
            "default": "mongod"
        },
        {
            "type": "pickString",
            "id": "unittestExecutable",
            "description": "Unit-test executable",
            "options": [
                "db_s_config_server_test",
                "db_s_shard_server_test"
            ]
        },
        {
            "type": "promptString",
            "id": "unittestSuite",
            "description": "Unit-test suite"
        },
        {
            "type": "promptString",
            "id": "coreDumpFile",
            "description": "Memory core dump file"
        }
    ]
}
