### Set Homebrew bash completion
[[ -r "/usr/local/etc/profile.d/bash_completion.sh" ]] && . "/usr/local/etc/profile.d/bash_completion.sh"

### Set Git prompt functions
[[ -r "${HOME}/.workspace-configuration/git-prompt.sh" ]] && . "${HOME}/.workspace-configuration/git-prompt.sh"

### Spelling correction
shopt -s cdspell

### Do not put duplicate lines or lines starting with space in the history
export HISTCONTROL=ignoreboth

### Append to the history file (do not overwrite it)
shopt -s histappend

### Silence the zsh message as the default shell
export BASH_SILENCE_DEPRECATION_WARNING=1

### Environment settings
export CLICOLOR=1
export PS1='\[\e[0;32m\][\u@\h:\[\e[0;33m\]\w\[\e[0;32m\]]\[\e[0;35m\]$(__git_ps1 "(%s)")\[\e[0;32m\]\$\[\e[0m\] '
export EDITOR=emacs

### Aliases
alias ll='ls -l'
alias la='ls -la'
alias rm='rm -i'
alias grep='grep --color=always'
alias more='more -RS'
alias less='less -RS'
alias emacs='emacs -nw'
alias e='emacs'
